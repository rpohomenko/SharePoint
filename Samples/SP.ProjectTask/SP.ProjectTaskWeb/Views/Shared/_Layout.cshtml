<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @if (this.ViewContext.RouteData.Values["action"].ToString() == "Admin")
    {
        @Styles.Render("~/Content/admin/css")
    }
    else
    {
        @Styles.Render("~/Content/css")
    }
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (ViewBag.PageContextInfo != null)
    {
        <script type="text/javascript">
            window._spPageContextInfo = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.PageContextInfo));
            window._currentCulture = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.CurrentCulture));
            window._isAppInstalled = @Html.Raw(ViewBag.IsAppInstalled ? "true": "false");
        </script>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/spcontext")

    @RenderBody()

    @RenderSection("scripts", required: false)
</body>
</html>
