{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "run start webpack",
            "postDebugTask": "end serve",                
            "sourceMaps": true, 
            //"breakOnLoad": true,
            "trace": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*"
            }
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",          
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "port": 9222,
            "preLaunchTask": "run start webpack",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*"
            }
        },
        {
            "name": "Launch Chrome index.html",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "preLaunchTask": "run build webpack",
            "file": "${workspaceFolder}/dist/test.html"
        },      
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox against localhost",           
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "run start webpack",
            "url": "http://localhost:3000/index.html",
            "pathMappings": [{
                "url": "http://localhost:3000",
                "path": "${workspaceFolder}"
            }]      
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox index.html",
            "file": "${workspaceFolder}/dist/index.html",            
            "preLaunchTask": "run build webpack"
        }        
    ]
}