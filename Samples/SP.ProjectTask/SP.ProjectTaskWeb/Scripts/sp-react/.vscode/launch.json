    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "chrome",
            "request": "launch",
            "webRoot": "${workspaceFolder}",
            "url": "http://localhost:3000",
            "preLaunchTask": "run start webpack",
            "sourceMaps": true,
            "smartStep": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*"
            }
        }
    ]
}